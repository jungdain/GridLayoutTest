<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="rlathfdl463.kr.hs.emirim.gridelayouttest.MainActivity"

    >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:id="@+id/ga1"/>


    <EditText
        android:id="@+id/ga2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/but_num1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="0"
        />
    <Button
        android:id="@+id/but_num2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="1"
        />
    <Button
        android:id="@+id/but_num3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="2"
        />
    <Button
        android:id="@+id/but_num4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="3"
        />
    <Button
        android:id="@+id/but_num5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="4" />

        <Button
            android:id="@+id/but_num6"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"

        android:text="5"
        />
        <Button
            android:id="@+id/but_num7"
            android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="6"
        />
    <Button
        android:id="@+id/but_num8"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="7"
        />
    <Button
        android:id="@+id/but_num9"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="8"
        />
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="9"
            />
   </GridLayout>


    <Button
        android:id="@+id/but_op1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="더하기"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:id="@+id/but_op2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="빼기"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:id="@+id/but_op3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*" />
    <Button
        android:id="@+id/but_op4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/" />
    </LinearLayout>

